{
  "name": "retroui-vue",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.12.4",
  "description": "A UI Library, powered by Vue & Tailwind CSS",
  "author": "fzzv",
  "license": "MIT",
  "homepage": "https://retro.xyu.fan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fzzv/retroui-vue.git"
  },
  "keywords": [
    "ui",
    "vue",
    "vue3",
    "retro",
    "components",
    "components library"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "pnpm type-check && pnpm build-only",
    "build-only": "vite build",
    "watch": "vite build --watch",
    "type-gen": "vue-tsc --declaration  --emitDeclarationOnly",
    "type-check": "vue-tsc -p tsconfig.check.json --noEmit",
    "test": "vitest",
    "test-update": "vitest -u"
  },
  "peerDependencies": {
    "vue": ">= 3.2.0"
  },
  "dependencies": {
    "reka-ui": "^2.3.2",
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.0.10",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/tsconfig": "^0.7.0",
    "jsdom": "^26.1.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.10"
  }
}
